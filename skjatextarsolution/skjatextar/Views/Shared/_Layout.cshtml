<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>

    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Ístextar.is", "Index", "Home", null, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Forsíða", "Index", "Home")</li>
                    <li>@Html.ActionLink("Um ístexta", "About", "Home")</li>
                    <li>@Html.ActionLink("Upload", "Upload", "Home")</li>
                    <li>@Html.ActionLink("Hafa samband", "Contact", "Home")</li>
                </ul>
                @Html.Partial("_LoginPartial")
            </div>
        </div>
    </div>
    <!--Search textbox added to all views-->
    <div class="col-sm-3 col-md-3 pull-right">
        <form action="/Home/SearchResult" method="post" class="navbar-form" role="search">
            <div class="input-group">
                <input type ="text" class="form-control" placeholder="Leita" name="srch-term" id="srch-term">
                <div class="input-group-btn">
                    <button class="btn btn-default" type="submit"><i class="glyphicon glyphicon-search"></i></button>
                </div>
            </div>
        </form>
    </div>
    
    <div class="container">
        <div class="row">
            <div class="col-md-3" id="leftCol">
                <div class="well">
                    <div id="droplist" class="droplist">
                        <div class="form-group">
                            <select id="selectShow" class="form-control">
                                <option value="">Veldu sjónvarpsþátt</option>
                                @foreach (var show in (List<skjatextar.Models.SrtFileModel>)ViewData["tvshows"])
                                {
                                    <option value="@show.srtId">@show.title</option>
                                }
                            </select>
                        </div>
                        <div class="form-group">
                            <select id="selectEpisode" class="form-control">
                                <option value="">Veldu seríu og þátt</option>
                            </select>
                        </div>
                            <div id="episodeInfo" class="alert alert-info">                            
                                Þáttaröð: <span id="season"></span><br />
                                Þáttur nr: <span id="episode"></span><br />
                                Nafn: <span id="episodeTitle"></span><br />                
                                <a href="" class="btn btn-success" id="episodeLink">Meira</a>
                            </div>
                        </div>
                </div>
            </div>
            <div class="col-md-9" id="mainContent">
                @RenderBody()
            </div>
        </div>
    </div>

    <div class="container body-content">
        
       


    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
    <script src="http://cdnjs.cloudflare.com/ajax/libs/jquery/2.0.3/jquery.js"></script>
    <script src="http://ajax.googleapis.com/ajax/libs/jquery/1.11.0/jquery.min.js"></script>
    <script type="text/javascript" src="~/Scripts/script.js"></script>
</body>

</html>


